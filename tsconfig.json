{
  "compilerOptions": {
    "module": "esnext",
    "lib": ["es2018"],
    "target": "es2018",
    "moduleResolution": "Node",
    "outDir": "dist",
    "baseUrl": "src/",
    "sourceMap": true,
    "allowJs": true,
    "checkJs": true,
    "paths": {
      "./typings/": [
        "*"
      ]
    },
    "strict": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": true
  },
  "exclude": [
    "node_modules"
  ]
}
